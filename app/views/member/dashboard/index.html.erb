<% include_javascript "busy_ajax" %>
<%= render :partial => 'profiles/header' %>    

<br />
<br />
<div class="portlet portletB">
    <h2>
    	    <span><%= I18n.t('groups.site.posts.latest') %></span>
		<span style="float: right">View <%= select_tag "filter_sharings" ,options_for_select([['All', 'All'],['Messages','Notice'],['Notes','Post'],['Events', 'Event'],['Photos', 'Picto::Photo'], ['Assignments', 'Assignment']], "All"), :onchange => remote_function(:url => shares_member_profile_path(@profile, :method => :post), :with => "'filter='+this.value")%></span>
	</h2>
	<div id="sharings">
 		<%= render :partial => 'member/sharings/sharings' %>
	</div>
</div>
    

<% content_for :sidebar do %>
	 
	<% @profile.user.groups.group_by(&:type).each do |type, groups| %>
		<%= render :partial => "member/groups/groups_portlet", :locals => { 
		:items => groups, 
		:style => :portletG, 
		:title => I18n.t("groups.model.#{type}.title") } %> 
	<% end %>

<% end %>
