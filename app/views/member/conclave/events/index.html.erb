<% include_javascript 'jquery-1.4.2.min.js' %>
<% include_stylesheet 'fullcalendar/adjustments' %>
<% include_stylesheet 'fullcalendar/fullcalendar' %>
<% include_javascript 'fullcalendar/fullcalendar' %>

<% url_params = {} %>
<% url_params[:group] = @group if @group%>

<% if @group %>
	<% json_feed_path =  member_conclave_events_path(:group => @group) %>
	<%= render :partial => '/member/groups/header' %>		
<% else %>
	<% json_feed_path =  member_conclave_events_path %>
<% end %>

<script type="text/javascript">
	$(document).ready(function() {

    // page is now ready, initialize the calendar...

    $('#calendar').fullCalendar({
        events: "<%= json_feed_path %>"
    });

});
</script>

<div id='calendar'></div>
<% content_for :sidebar do %>
          <div class="title3 clearfix margin1">
              My events
          </div> 
          <br />
          
          <ul class="list2">
            <% if @events.empty? %>
              <li class="clearfix">You haven't create any event
            <% else %>
              <% @events.each do |event| %>
              <li class="clearfix" id="event<%=event.id.to_s%>">
                  <div class="li_content">
                      <div class="metadata">
                          <span class="meta">Title:</span> <%= link_to '<strong>'+event.title+'</strong>', conclave_event_path(event), :title => event.title %>
                          <br />
                          <span class="meta">Date:</span> <%=event.start_date.to_s %>
                          <br />
                          <span class="meta">Time:</span> From <%=event.start_time.to_s %> to <%=event.end_time.to_s %>
                          <br />
                          <span id="current_status<%=event.id.to_s%>">
                            <%if logged_in? && event.registered?(current_user)%>
                              <%=link_to I18n.t('tog_conclave.member.unregister'), member_conclave_event_attendance_path(event, event), :method => :delete %>
                            <%elsif event.active? && event.places_left?%>
                              <%=link_to I18n.t('tog_conclave.member.register'), member_conclave_event_attendances_path(event), :method => :post %>
                            <%end%>
							| <%= share_with_groups_link(event) if i_am_the_owner_of? event %>                          
                          </span>
                      </div>
                  </div> <!-- /.li_content -->    
              </li>
              <%end%>
            <%end%>
          </ul>
<% end %>		  