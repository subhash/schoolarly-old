<% entry = share.shareable %>
<% entry_link = member_link(share) %>
<div class="title desc">
    <%= link_to title(share), entry_link %>
</div>
<div class="portlet portletL">
    <span class="theme">
        <%= theme(share)%>
    </span>
    <span class="date"><%= time_ago(share) %></span>
    . <%= link_to I18n.t('tog_conversatio.views.posts.comments.add_comment'), entry_link %> . <%= share_with_groups_link(entry) if i_own? entry %>
</div>