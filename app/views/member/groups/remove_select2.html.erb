<div class="portlet portletF" id="portlet_featuredUsers">
    <h2><span><%= link_to @group.name, member_group_path(@group) %> > <%= @form_title || I18n.t("groups.site.#{@type}.remove_select") %></span></h2>
    <div class="portlet_content">
    	<% form_tag (@form_url || remove_member_group_path(@group)) do |f| %>
        <ul>
            <% @profiles.each do |profile| %>
            <li>
            	<%= check_box_tag 'members[]', profile.id, false %>
                <%=link_to icon_for_profile(profile, 'medium'), member_profile_path(profile), :title => profile.full_name%>
				<%=link_to profile.full_name, profile %>                
            </li>
            <%end %>
			<li>
				<%= submit_tag (@form_submit || I18n.t("groups.site.remove.#{@type}")), :class => "button" %>
			</li>
        </ul>		
		<% end %>
    </div>
</div>
