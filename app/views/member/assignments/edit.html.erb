<%= include_tiny_mce_if_needed %>
<% include_stylesheet 'assignments/rubric' %>
<div class="titleB">
    <% if @group %>
    <%= link_to @group.name, member_group_path(@group) %>> <%= I18n.t('assignments.member.edit.change') %>
    <% else %>
    <%= I18n.t('assignments.member.edit.change') %>
    <% end %>
</div>
<br/>
<div class="error">
    <%= error_messages_for :activity %>
</div>
<% form_for(@activity, :url=>member_assignment_path(@assignment), :html=>{:multipart=>true}) do |f| %>
<fieldset>
    <% f.fields_for :assignment do |a| %>
    <%= render :partial => 'form', :locals => {:f => a, :publish => @assignment.home? } %>
    <% end %>
    <div class="fields">
        <% if @assignment.home? %>
        <p>
            <label for="due_by">
                <%= I18n.t('assignments.model.due_by') %>
            </label>
            <%= f.text_field :due_date,  :class => "date_with_time" %>
            <br/>
        </p>
        <% else %>
        <p>
            <%= I18n.t('class_activities.model.date') %>
            <%= f.text_field :date,  :class => "date_without_time" %>
            <%= I18n.t('class_activities.model.from') %>
            <%= f.text_field :start_time,  :class => "time_only", :size => 8 , :value => @activity.start_time.iso8601 %>
            <%= I18n.t('class_activities.model.to') %>
            <%= f.text_field :end_time,  :class => "time_only", :size => 8, :value => @activity.end_time.iso8601 %>
            <br/>
        </p>
        <% end %>
    </div>
</fieldset>
<div class="actions">
    <%= submit_tag I18n.t("assignments.member.edit.save"), :class => "button mainaction" %>
</div>
<% end %>