<% grade = share.shareable %>
<% assignment = grade.assignment %>
<% submission = assignment.submissions.find_by_user_id(current_user.id) %>
<div>
    <span class="title"><%= link_to assignment.name, member_assignment_path(assignment) %></span>
    <% if submission %>
    <span class="desc"><%= " > " %><%= link_to submission.name, member_submission_path(submission) %><%= " > " %></span>
    <% end %>
	<span class="desc"></span>
    <%= link_to I18n.t('grades.model.title'), member_grade_path(grade), :class => "assignment_grade" %>
    <% if assignment.date %>
    <div class="time">
        <%= assignment.date.inspect %>, <%=assignment.start_time.to_s(:time_only) %> - <%=assignment.end_time.to_s(:time_only) %>
    </div>
    <% end %>
</div>
<br/>

<div class="portlet portletL">
    <span class="theme"><span class="grade"><%= link_to icon_for_grade,  member_grade_path(grade), :title => "#{I18n.t('grades.member.view.grade_for')} #{assignment.name}" %></span></span>
    <span class="date"><%= I18n.t('assignments.site.list_detail.time_ago', :time => time_ago_in_words(share.updated_at)) %></span>	
</div>

