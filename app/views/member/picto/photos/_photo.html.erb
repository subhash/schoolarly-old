<% @size ||= :big %>
<% @photo = photo %>
<div id=<%="photo_#{photo.id}" %> class="hide">
    <%= image_tag(photo.image.url(@size)) %>
    <div class="image">
        <%= link_to icon_for_profile(photo.owner.profile, 'tiny'), member_profile_path(photo.owner.profile) %>
    </div>
    <div>
        <%= photo.description %>
    </div>
    <%= render :partial => "shared/comments", :locals => { :commentable => photo, :show_all => true } %>
</div>
