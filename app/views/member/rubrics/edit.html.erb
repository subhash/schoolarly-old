<% include_javascript 'jquery-1.4.2.min' %>
<% include_javascript 'jeditable/jquery.jeditable' %>
<% include_javascript 'elastic/jquery.elastic' %>
<script type="text/javascript">
    jQuery(document).ready(function(){
        jQuery('.level').each(function(i){
				jQuery(this).editable('<%= member_rubric_path(@rubric) %>', {
	            tooltip: "Click to edit",
	            width: 200,
	            method: 'PUT',
	            id: 'element'				
        	});
		});
        jQuery('.criterion').editable('<%= member_rubric_path(@rubric) %>', {
            tooltip: "Click to edit",
            width: 200,
            method: 'PUT',
            id: 'element'
        });
        jQuery('.rubric_descriptor').editable('<%= member_rubric_path(@rubric) %>', {
            type: 'textarea',
            cancel: 'Cancel',
            submit: 'OK',
            tooltip: "Click to edit",
            width: 200,
            method: 'PUT',
            id: 'element'
        }).click(function(){
            jQuery('.rubric_descriptor textarea').elastic();
        });
    });
</script>
<h2><span><%= I18n.t('rubrics.member.new.title') %></span></h2>
<table class="tableB">
    <tbody>
        <tr>
            <th scope="col">
            </th>
            <% for level in @rubric.levels %>
            <th scope="col">
                <b class="level" name="rubric[levels_attributes][<%= level.id %>][name]" id="level-<%= level.id%>-name"><%= level.name %></b>
            </th>
            <% end %>
        </tr>
        <% for criterion in @rubric.criteria %>
        <tr>
            <th>
                <b class="criterion" name="rubric[criteria_attributes][<%= criterion.id %>][name]" id="criterion-<%= criterion.id%>-name"><%= criterion.name %></b>
            </th>
            <% for rd in criterion.rubric_descriptors %>
            <td>
                <b class="rubric_descriptor" name="rubric[criteria_attributes][<%= criterion.id %>][rubric_descriptors_attributes][<%= rd.id %>][description]" id="rubric_descriptor-<%= rd.id%>-description"><%= rd.description %></b>
            </td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>
