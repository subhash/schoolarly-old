<div class="portlet portletI">
    <h3><span><%= I18n.t('submissions.site.manage.title', :name => @assignment.post.title) %></span></h3>
    <div class="portlet_content">
        <ul>
            <% if @assignment.post.user == current_user %>
            <% @submitters.each do |s| %>
            <% submission = @assignment.submissions.by(s) %>
            <li>
                <div class="image">
                    <%= link_to icon_for_profile(s.profile, 'tiny'), profile_path(s.profile) %>
                </div>
                <div>
                    <%= link_to s.profile.full_name, profile_path(s.profile) %>
                </div>
                <% if submission.blank? or !submission.post.published? %>
                <div class="subtitle">
                    <%= I18n.t('submissions.model.state.pending') %>
                </div>
                <% else %>
                <div class="title">
                    <%= link_to "#{sanitize submission.post.title}", member_submission_path(submission) %>
                </div>
                <div class="portletL fontsmaller">
                    <%= I18n.t('assignments.site.list_detail.time_ago', :time => time_ago_in_words(submission.post.created_at)) %>
                </div>
                <% end %>
            </li>
            <% end %>
            <% elsif @assignment.shared_to?(current_user) and current_user.student? %>
            <% submission = @assignment.submissions.by(current_user) %>
            <li>
                <div class="image">
                    <%= link_to icon_for_profile(current_user.profile, 'tiny'), profile_path(current_user.profile) %>
                </div>
                <div>
                    <%= link_to current_user.profile.full_name, profile_path(current_user.profile) %>
                </div>
                <% if submission.blank? %>
                <%= link_to I18n.t('submissions.site.manage.new'), new_member_assignment_submission_path(@assignment) %>
                <% else %>
                <% if submission.post.published? %>
                <%= link_to I18n.t('submissions.site.manage.view'), member_submission_path(submission) %>
                <% else %>
                <%= I18n.t("submissions.model.state.draft") %>: <%= link_to I18n.t('submissions.site.manage.view'), edit_member_submission_path(submission) %>
                <% end %>
                <% end %>
            </li>
            <% end %>
        </ul>
    </div>
</div>
