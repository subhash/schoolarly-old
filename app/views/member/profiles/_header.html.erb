<% size ||= "medium" %>
<% profile ||= @profile %>
<div class="detail1">
    <div class="image">
        <%=icon_for_profile(profile, size) %>
    </div>
    <div class="title">
        <%= link_to profile.full_name, member_profile_path(profile) %>
    </div>
    <% if current_user.can_view?(profile.user) %>
    <div class="subtitle">
        <%= I18n.t('tog_social.profiles.model.username') %>: <%=profile.user.login %>
    </div>
    <% end %>
</div>
