<% include_autodiscovery(:atom, conversatio_blog_url(@blog, :format => :atom), :title => @blog.title) %>
<%= render :partial => 'member/sharings/title', :locals => {:shareable => @post} %>
<%= link_to icon_for_post + I18n.t('assignments.site.download'), @post.doc.url, :title => I18n.t('assignments.site.download_file'), :class => 'icon float_right'  if @post.doc.file? %>
<%= render :partial => 'post' %>
<% content_for :sidebar do %>
<%= render :partial => 'member/conversatio/posts/manage', :locals => {:post => @post} %>
<br/>
<%= render :partial => 'shared/groups', :locals => {:shareable => @post} %>
<br/>
<%= render :partial => '/conversatio/blogs/tag_cloud_single_blog', :locals => { :blog => @blog } %>
<br/>
<%= render :partial => '/conversatio/blogs/archive' %>
<% end %>
