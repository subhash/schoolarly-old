<fieldset>
  <legend><%= I18n.t('tog_conversatio.model.post.content')%></legend>
  <div class="fields">
    <p><label for="post_title"><%= I18n.t('tog_conversatio.model.post.title')%></label><%= f.text_field :title, :class=>"fieldbox wide" -%></p>
    <p><label for="post_body"><%= I18n.t('tog_conversatio.model.post.body')%></label><%= f.text_area :body, :class=>"fieldbox wide mceEditor" -%></p>
  </div>
</fieldset>
<fieldset>
  <legend><%= I18n.t('tog_conversatio.model.post.metadata')%></legend>
  <div class="fields">
    <p><label for="post_tag_list"><%= I18n.t('tog_conversatio.model.post.tags')%> <%= I18n.t('tog_conversatio.model.post.tags_explanation')%></label><%= f.text_field :tag_list, :class=>"fieldbox wide" -%></p>
    <%= hidden_field_tag 'post_state', I18n.t('tog_conversatio.model.states.published')%>
  </div>
</fieldset>
<%= hidden_field_tag :group, params[:group] if params[:group]%>