<div class="image">
    <%= link_to icon_for_post, conversatio_blog_post_path(blog, post), :title => "#{sanitize post.title}" %>
</div>
<div class="subtitle">
    <%= link_to "#{sanitize post.title}", conversatio_blog_post_path(blog, post), :title => "#{sanitize post.title}" %>
</div>
<div class="summary">
    <%= render :partial => 'conversatio/posts/tags', :locals => { :post => post } %>
</div>
<div class="text">
    <%= sanitize(textilize(post.body), :tags => (Tog::Plugins.settings :tog_core, 'sanitized.allowed_tags').split, :attributes => (Tog::Plugins.settings :tog_core, 'sanitized.allowed_attributes').split) %>
</div>
<div class="portlet portletL">
	<%= I18n.t('assignments.site.list_detail.time_ago', :time => time_ago_in_words(post.published_at)) %> .
    <%= link_to I18n.t('tog_conversatio.views.posts.comments.comments', :size => post.comments.size), conversatio_blog_post_path(blog, post) %> . 
	<%= link_to I18n.t('tog_conversatio.views.posts.comments.add_comment'), conversatio_blog_post_path(blog, post), :title => I18n.t('tog_conversatio.views.posts.comments.comment_title', :post_title => h(post.title)) %> . 
	<%= share_with_groups_link(post) if i_am_the_author_of? post %>
</div>
