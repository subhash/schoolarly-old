<% title = @user.school ? "#{@user.school.group.name}"  : "Schoolarly" %>
<div class="titleD">
    <div class="title">
        <%= I18n.t('users.site.reset.title', :title => title) %>
    </div>
    <div class="reset">
        <p>
            <%= I18n.t('users.site.reset.text_1') %>
        </p>
        <p>
            <span>
            <%= I18n.t('users.site.reset.text_2') %><span class="fontbigger"><%= @user.email %></span>
        </p>
    </div>
</div>
<div class="titleB">
    <%= I18n.t('tog_user.member.password.reset') %>
</div>
<p>
    <span class="fontsmaller"><%= I18n.t('users.site.reset.text_3') %></span>
</p>
<br/>
<%= error_messages_for :user %>
<% form_for :user, :html => {:id => "f_signup", :name => "f_signup" } do |f| -%>
<fieldset>
    <div class="fields">
        <p>
            <label for="user_password">
                <%= I18n.t('tog_user.member.password.new') %>
            </label>
            <%= f.password_field :password, :class => "fieldbox", :size => "40" %>
        </p>
        <p>
            <label for="user_password_confirmation">
                <%= I18n.t('tog_user.member.password.confirm_new') %>
            </label>
            <%= f.password_field :password_confirmation, :class => "fieldbox", :size => "40" %>
        </p>
        <div class="actions">
            <%= submit_tag I18n.t('tog_user.member.password.reset'), :class => "button mainaction" %>
        </div>
    </div>
</fieldset>
<% end -%>
