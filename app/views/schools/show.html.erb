<div class="breadcrumbs"><%= ancestor_path_for(@group) %></div>
<div class="detail detail1">
  <div class="image"><%= link_to image_for_group(@group, 'medium', :class=>"img"), path_for_group(@group) %></div>
  <div class="title"><%= link_to @group.name, path_for_group(@group) %></div>
  <div class="subtitle"><%= I18n.t('tog_social.groups.model.created_at') %> <%= @group.created_at.strftime("%d/%m/%Y") %>, <%= I18n.t('tog_social.groups.model.members', :count => @group.members.size) %></div>
  <div class="summary"><%= I18n.t('tog_social.groups.model.moderated_by') %>:
    <% for moderator in @group.moderators -%>
      <%=link_to moderator.profile.full_name, profile_path(moderator.profile), :class=> 'maincolor4'%>
    <% end -%>
    <br/>
    <%= I18n.t('tog_social.tags.tags') %>: 
      <% for tag in @group.tag_list %>
        <%= link_to tag.to_s, tag_groups_path(tag) %>
      <% end %>   
  </div>
  <div class="text">
    <p><%= @group.description %></p>
  </div>
</div> <!-- /.detail1 --> 

<% content_for :sidebar do %>

<div class="portlet portletC" id="portlet_moreLinks">
    <h2><span><%= I18n.t('tog_social.more_links') %></span></h2>
    <div class="portlet_content">
        <ul>
		  <% if i_am_moderator_of @group -%> 
		  <li><%= link_to I18n.t('schools.site.admin.invite'), invite_member_group_path(@group.id), :class => 'add' %></li>
		  <li><%= link_to I18n.t('schools.site.teachers.invite'), invite_member_group_path(@group.id), :class => 'add' %></li>
		  <% end %>
        </ul>
    </div> 
</div>    

  
<%= render :partial => "groups/groups_portlet", :locals => { 
  :items => @group.children.klass, 
  :style => :portletG, 
  :title => I18n.t('schools.model.klasses.title'),  
  :no_items => I18n.t('groups.model.groups_not_found', :parent => @group.name),
  :add_link => link_to_if(i_am_moderator_of(@group),I18n.t('klasses.site.create_klass'), new_member_school_klass_path(@group.network), :class => 'button add'){} } %>
  
<%= render :partial => "shared/profiles_portlet", :locals => { 
  :items => @group.student_users.collect(&:profile), 
  :style => :portletG, 
  :title => I18n.t('schools.model.students.title', :count => @group.student_users.size),  
  :no_items => I18n.t('tog_social.groups.model.members_not_found', :group_name => @group.name),
  :add_link => link_to_if(i_am_moderator_of(@group),I18n.t('schools.site.students.invite'), new_member_school_student_path(@group.network), :class => 'button add'){} } %>


<%= render :partial => "groups/groups_portlet", :locals => { 
  :items => @group.children.default, 
  :style => :portletG, 
  :title => I18n.t('groups.model.sub_groups.title'),  
  :no_items => I18n.t('groups.model.groups_not_found', :parent => @group.name),
  :add_link => link_to_if(i_am_moderator_of(@group),I18n.t('groups.member.sub_groups.create_group'), member_new_sub_group_path(@group.id), :class => 'button add'){} } %>
<% end %>

