<% include_stylesheet "date.css" %>
<div class="clearfix">
    <!--
    <div class="image left"><%= image_tag event.icon.url :small %></div>
    -->
    <div class="image date month<%= event.start_date.month %>">
        <%= event.start_date.day %>
    </div>
    <div class="subtitle">
        <%= link_to event.title, conclave_event_path(event), :title => event.title %>
        <%= write_event_date(event) %>
    </div>
    <div class="text">
        <%= write_event_time(event) %>
        <%= "at #{event.venue}"  if event.venue %>
    </div>
    <div>
        <%= event.description %>
    </div>
    <div class="portlet portletC">
        <%= I18n.t('assignments.site.list_detail.time_ago', :time => time_ago_in_words(event.created_at)) %>. <%= link_to I18n.t('tog_conversatio.views.posts.comments.comments', :size => event.comments.size), conclave_event_path(event) %> . <%= link_to I18n.t('tog_conversatio.views.posts.comments.add_comment'), conclave_event_path(event), :title => I18n.t('groups.comments.comment_title', :title => h(event.title)) %> . <%= share_with_groups_link(event) if i_am_the_owner_of? event %>
    </div>
</div>
