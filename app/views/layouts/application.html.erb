                <%= render :partial => "shared/header_options" %>
            </div>
            <!-- /#header_options -->
            <div id='top-bar'>
                <ul>
                    <%= links_for_navigation :site %>
                </ul>
            </div>
            <!-- #menu -->
        </div>
            <!-- /#header -->
        <div id="main-content">
            <div id="container" class="row-fluid">
                <%= render_flash_messages %>
                <div id="wrapper" class="span9">
                    <%= yield %>
                </div>
                <!-- /.left_col -->
                <div class="span3">
                    <%= yield :sidebar %>
                </div>
                <!-- /.right_col -->
            </div>
        </div>
            <!-- /#main-content -->
            <%= render :partial => "shared/footer" %>
        </div>
        <!-- #container -->
